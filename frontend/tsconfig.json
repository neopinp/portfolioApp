{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
